{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
    <table class="table table-danger">
        <tr>
            <th>Note Id</th>
            <th>Note Title</th>
            <th>Note Content</th>
            <th>Note Deadline</th>
        </tr>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.title }}</td>
                <td>{{ note.content }}</td>
                <td>{{ note.date | date('d/m/Y') }}</td>
            </tr>
        {% endfor %}  
    </table>
</div>
{% endblock %}