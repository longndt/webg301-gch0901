{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-success mb-2">Genre List</h2>
    <a class="btn btn-primary mb-3" href="{{ path('genre_add')}}">ADD</a>
    <table class="table table-info">
        <tr>
            <th>Genre Id</th>
            <th>Genre name</th>
            <th>Genre image</th>
            <th>Menu</th>
        </tr>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>
                    <a href="{{ path('genre_detail' , {'id' : genre.id })}}">
                        <img src="{{ genre.image }}" width=100 height=100>
                    </a>     
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('genre_edit', {'id': genre.id })}}">EDIT</a>
                    <a class="btn btn-danger" href="{{ path('genre_delete', {'id' : genre.id })}}"
                    onclick="return confirm('Do you want to delete this genre ?');"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}  
    </table>
</div>
{% endblock %}
