{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
   <h2 class="text text-primary mb-3">Genre Detail</h2>
   <div class="row">
      <div class="col">
         <img src="{{ genre.image }}" width=250 height=250>
      </div>
      <div class="col">
         <h3>{{ genre.name }}</h3>
         <h5 class="text-info">{{ genre.description }}</h5>
         <h6> Book List </h6>
      </div>
   </div>
</div>
{% endblock %}