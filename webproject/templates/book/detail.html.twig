{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center">
   <h2 class="text-primary mb-3"> Book Detail </h2>
   <div class="row">
      <div class="col">
         <img src="{{ book.image }}" width=200 height=200>
      </div>
      <div class="col">
         <h3>{{ book.title }}</h3>
         <h5 class="text-info">Author: {{ book.author }}</h5>
         <h5 class="text-success">Genre: 
            {% if book.genre != null %}
                {{ book.genre.name }}
            {% endif %}
        </h5>
         <h5 class="text-secondary">Price: {{ book.price }} $ </h5>
         <h5 class="text-monospace">Published Date: {{ book.date | date('d/m/Y') }}</h5>
      </div>
   </div>
</div>
{% endblock %}