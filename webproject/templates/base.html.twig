<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Book Management System {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- Bootstrap -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# navigation bar #}
        {% block nav %}
        <ul class="nav justify-content-center|justify-content-end">
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('home')}}">Home</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('book_index')}}">Book</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('genre_index')}}">Genre</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="">Logout</a>
            </li></h1>
        </ul>
        {% endblock %}
        {# show flash message #}
        {% block flash %}
        <div class="container-md col-md-6 text-center">
            {% for message in app.session.flashBag.get('Success') %}
               <p class="alert alert-success">{{ message }}</p> 
            {% endfor %}
            {% for message in app.session.flashBag.get('Error') %}
               <p class="alert alert-danger">{{ message }}</p> 
            {% endfor %}
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
