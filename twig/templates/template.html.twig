{# tạo file template chung cho toàn bộ webpage #}
<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>My symfony web</title>
    <!-- Bootstrap -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   {# Để link đến thư mục public thì dùng từ khóa asset trong twig #}
   <link rel="stylesheet" href="{{ asset('style.css') }}">
</head>
<body>
   {% block header %}
   <ul class="nav justify-content-center|justify-content-end">
       <li class="nav-item">
           <a class="nav-link" href="https://cms.greenwich.edu.vn/">Greenwich CMS</a>
       </li>
       <li class="nav-item">
           <a class="nav-link" href="https://ap.greenwich.edu.vn/">Greenwich AP</a>
       </li>
       {# Sử dụng từ khóa path trong twig để link đến các page nội bộ của web #}
      <li class="nav-item">
           <a class="nav-link" href="{{ path('homepage')}}">Homepage</a>
       </li>
       <li class="nav-item">
           <a class="nav-link" href="{{ path('demo')}}">Demo page</a>
       </li>
       <li class="nav-item">
           <a class="nav-link" href="{{ path('demo1')}}">Demo1</a>
       </li>
   </ul>
   {% endblock %}
   {% block body %}
   {# block này không có nội dung để các web page khác override #}
   {% endblock %}
</body>
</html>