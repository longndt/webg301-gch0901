{% extends 'base.html.twig' %}

{% block body %}
<div class="bs-example" data-example-id="striped-table">
   <table class="table table-striped text-center">
      <tr>
         <th>ID</th>
         <th>Name</th>
         <th>Category</th>
         <th>Menu</th>
      </tr>
      {% for todo in todos %}
         <tr>
            <td>{{ todo.id }}</td>
            <td>{{ todo.name }}</td>
            <td>{{ todo.category }}</td>
            <td>
               <a class="btn btn-info" href="{{ path('todo_detail', {'id' : todo.id }) }}">DETAIL</a>
               <a class="btn btn-warning" href="{{ path('todo_edit', {'id' : todo.id }) }}">EDIT</a>
               <a class="btn btn-danger" href="{{ path('todo_delete', {'id' : todo.id }) }}"
               onclick="return confirm('Do you want to delete this Todo ?')";>DELETE</a>
            </td>
         </tr>
      {% endfor %}   
   </table>
</div>
{% endblock %}
